<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WeatherSettings">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ustawiena pogody"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jednostka temperatury"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/TempertureSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/Ulubione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ulubione"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/ulubioneMiastaSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Czas odświeżania Astro"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/odswiezanieAstro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dodajDoListyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dodaj miasto" />
    </TableRow>

    <Button
        android:id="@+id/ustawAstroRecznieButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ustaw Astro ręcznie" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zapisz"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude: " />

        <TextView
            android:id="@+id/dlugoscGeograficznaWeather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude: " />

        <TextView
            android:id="@+id/szerokoscGeograficznaWeather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>

</LinearLayout>